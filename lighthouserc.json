{
  "ci": {
    "collect": {
      "staticDistDir": "dist",
      "startServerCommand": "npx serve -s dist -l 4173",
      "numberOfRuns": 3,
      "url": ["http://localhost:4173/"]
    },
    "settings": {
      "blockedUrlPatterns": [
        "*://*mapbox.com/*",
        "*://*supabase.co/*",
        "*://*/fonts/*",
        "*://*/analytics/*"
      ]
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", {"minScore": 0.3}],
        "first-contentful-paint": ["error", {"maxNumericValue": 8500}],
        "largest-contentful-paint": ["error", {"maxNumericValue": 9000}],
        "total-blocking-time": ["error", {"maxNumericValue": 2500}],
        "cumulative-layout-shift": ["error", {"maxNumericValue": 0.1}]
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": "lhci-results/desktop"
    }
  }
}
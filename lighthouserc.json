{
  "ci": {
    "collect": {
      "url": [
        "http://localhost:4173/",
        "http://localhost:4173/?view=gps",
        "http://localhost:4173/?view=export", 
        "http://localhost:4173/?view=settings"
      ],
      "numberOfRuns": 3,
      "settings": {
        "preset": "desktop",
        "blockedUrlPatterns": [
          "*://*mapbox.com/*",
          "*://*supabase.co/*", 
          "*://*/fonts/*",
          "*://*/analytics/*"
        ]
      },
      "puppeteerScript": "scripts/lhci-tabs.cjs"
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", {"minScore": 0.75}],
        "first-contentful-paint": ["error", {"maxNumericValue": 2000}],
        "largest-contentful-paint": ["error", {"maxNumericValue": 2500}],
        "total-blocking-time": ["error", {"maxNumericValue": 350}],
        "cumulative-layout-shift": ["error", {"maxNumericValue": 0.10}]
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": "./lhci-results/desktop"
    }
  }
}
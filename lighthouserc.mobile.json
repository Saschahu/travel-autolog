{
  "ci": {
    "collect": {
      "staticDistDir": "dist",
      "startServerCommand": "npx serve -s dist -l 4173",
      "numberOfRuns": 3,
      "url": [
        "http://localhost:4173/"
      ]
    },
    "settings": {
      "preset": "mobile",
      "formFactor": "mobile",
      "screenEmulation": {
        "mobile": true
      },
      "throttlingMethod": "simulate",
      "blockedUrlPatterns": [
        "*://*mapbox.com/*",
        "*://*supabase.co/*",
        "*://*/fonts/*",
        "*://*/analytics/*"
      ]
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", {"minScore": 0.2}],
        "first-contentful-paint": ["error", {"maxNumericValue": 10000}],
        "largest-contentful-paint": ["error", {"maxNumericValue": 12000}],
        "total-blocking-time": ["error", {"maxNumericValue": 3000}],
        "cumulative-layout-shift": ["error", {"maxNumericValue": 0.15}]
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": "lhci-results/mobile"
    }
  }
}